<%%= form_for(@<%= singular_table_name %>) do |f| %>
<h3 class="form_title"><%%= @title%></h3>
<% for attribute in attributes -%>
<div class="field">
	<%%= f.label :<%= attribute.name %>,:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%%= f.<%= attribute.field_type %> :<%= attribute.name %>,:class=>"basic_input" %><%%= mark_required(@<%= singular_table_name %>, :<%= attribute.name %>) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<% end -%>
  <div class="actions">
    <%%= f.submit "保存" %>
  </div>
<%% end %>