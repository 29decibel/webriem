= form_for [@vrv_project,@bill_after] do |f|
  =tb_input_field(f,'bill_state',:as=>'radio')
  =tb_input_field(f,'reason',:as=>'radio')
  .actions
    = f.submit '保存',:class=>'btn primary'
    =link_to "放弃", [@vrv_project,@bill_after],:class=>'btn'
:javascript
  $(function(){
    tokenize();
    $("#bill_after_bill_state_:checked").live('change',function(){
      if($(this).val()=='我方中标')
      {
        $('.bill_after__reason').hide('slow');
      }else
      {
        $('.bill_after__reason').show('slow');
      }
    });
    $("#bill_after_bill_state_").change();
  });
