<%= jqgrid :docs_approved,
		:model=>"DocHead",
		:caption=>"已经审批过的单据",
		:multiselect=>true,
		:colModel =>["doc_no",{:name=>"person__name",:label=>"申请人"},
			{:name=>"apply_date",:formatter=>'date',:datefmt=>'Y-m-d'},
			{:name=>"doc_type",:getter=>:doc_type_name,:enum_type=>"DocHead::DOC_TYPES"},
			{:name=>"doc_state",:getter=>:doc_state_name,:enum_type=>"DocHead::Doc_State"},
			{:name=>"total_amount",:getter=>:total_fi_amount,:label=>"审批金额"}],
		:height=>450,:width=>800,
		:joins=>:work_flow_infos,
		:where=>"work_flow_infos.people_id=#{current_user.person.id}",
		:ondblClickRow=>%Q(#--function(rowid,iRow,iCol,e){window.location='/doc_heads/'+rowid.toString();}--#)%>
<div class="jqgrid">
	<div class="buttons">
    <% if current_user.person.person_type_id==3 %>
		  <a onclick="output_to_txt('#docs_approved'); return false;" href="#">
			  <img src="/images/icons/page_white_text.png" alt=""/> <%= I18n.t('common_attr.btn_output_txt')%>
      </a>
    <% end %>
		<a onclick="output_to_excel('#docs_approved'); return false;" href="#">
			<img src="/images/icons/table.png" alt=""/> <%= I18n.t('common_attr.btn_output_excel')%>
		</a>
		<a onclick="batch_print('#docs_approved'); return false;" href="#">
			<img src="/images/icons/printer.png" alt=""/><%= I18n.t('common_attr.btn_batch_print')%>
		</a>
	</div>
</div>
