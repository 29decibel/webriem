<h3 class="form_title">列表</h3>
<table class="hor-zebra">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr class="<%= "odd" if role.id%2==0 %>">
    <td><%= role.name %></td>
    <td><%= link_to '查看', role %></td>
    <td><%= link_to '编辑', edit_role_path(role) %></td>
    <td><%= link_to '删除', role, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>

