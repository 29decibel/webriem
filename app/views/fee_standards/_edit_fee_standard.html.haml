    %span.label= f.label "#{I18n.t('common_attr.region_type')}#{mark_required(f.object,:region_type_id)}" 
    %span.value= reference_select "region_type_id","RegionType",:text=>f.object.region_type.to_s,:value=>f.object.region_type_id
