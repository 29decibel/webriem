    %span.label= f.label "#{I18n.t('common_attr.fee')}#{mark_required(f.object,:fee)}" 			
    %span.value= reference_select "fee_standard[fee_id]","Fee",:text=>f.object.fee.to_s,:value=>f.object.fee_id
