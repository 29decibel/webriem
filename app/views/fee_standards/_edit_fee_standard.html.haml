    %span.label= f.label "#{I18n.t('activerecord.attributes.person.person_type_id')}#{mark_required(f.object,:person_type)}" 
    %span.value= collection_select(:fee_standard, :person_type_id, PersonType.all, :id, :name, {:include_blank => 'æ— '},{:class=>"basic_input"})
  =render "basic_setting/fb_actions"
