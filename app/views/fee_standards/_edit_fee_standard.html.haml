    %span.label= f.label "#{I18n.t('activerecord.models.business_type')}#{mark_required(f.object,:business_type_id)}" 
    %span.value= reference_select "business_type_id","BusinessType",:text=>f.object.business_type.to_s,:value=>f.object.business_type_id
