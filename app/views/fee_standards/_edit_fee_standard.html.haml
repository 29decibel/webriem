    %span.label= f.label "#{I18n.t('activerecord.models.transportation')}#{mark_required(f.object,:transportation_id)}" 			
    %span.value= reference_select "transportation_id","Transportation",:text=>f.object.transportation.to_s,:value=>f.object.transportation_id
