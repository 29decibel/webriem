			<a href="#" class-data="RegionType"><span class="reference"></span></a>			
		</div>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "职务#{mark_required(f.object,:duty_id)}" %>			
		<div class="reference">
