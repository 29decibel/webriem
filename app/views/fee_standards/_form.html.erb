			<a href="#" class-data="Fee"><span class="reference"></span></a>			
		</div>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "金额#{mark_required(f.object,:amount)}" %>			
		<%= f.text_field :amount,:class=>"input1 " %>
	</div>
</div>
</div>
<% end %>