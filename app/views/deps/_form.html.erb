<%= form_for @dep,:remote=>true do |f| %>
<div class="form_title">
	<h3><%= @title%></h3>
</div>
<div class="actions">
	<%= link_to "#{I18n.t('common_op.btn_new')}", new_dep_path,:class=>"button2" %>
	<%= link_to "#{I18n.t('common_op.btn_save')}",{:href=>"#"},:class=>"submit button2" %>
	<%= link_to "#{I18n.t('common_op.btn_return')}", deps_path,:class=>"button2" %>
</div>
<div class="form_area">
<div class="form_block">
	<div class="form_field">
		<%= f.label "#{I18n.t('common_attr.code')}#{mark_required(f.object,:code)}" %>			
		<%= f.text_field :code,:class=>"input1 " %>
	</div>
	<div class="form_field">
		<%= f.label "#{I18n.t('common_attr.name')}#{mark_required(f.object,:name)}" %>
		<%= f.text_field :name,:class=>"input1 " %>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "#{I18n.t('activerecord.attributes.dep.version')}#{mark_required(f.object,:version)}" %>			
		<%= f.text_field :version,:class=>"input1" %>
	</div>
	<div class="form_field">
		<%= f.label "#{I18n.t('activerecord.attributes.dep.start_date')}#{mark_required(f.object,:start_date)}" %>
		<%= f.text_field :start_date,:class=>"datepicker input1" %>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "#{I18n.t('activerecord.attributes.dep.end_date')}#{mark_required(f.object,:end_date)}" %>			
		<%= f.text_field :end_date,:class=>"datepicker input1" %>
	</div>
	<div class="form_field">
		<%= f.label "#{I18n.t('activerecord.attributes.dep.u8dep_code')}#{mark_required(f.object,:u8dep_code)}" %>
		<%= f.text_field :u8dep_code,:class=>"input1" %>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "#{I18n.t('activerecord.attributes.dep.parent_dep_id')}" %>			
		<div class="reference">
			<%= f.hidden_field :parent_dep_id,{:class=>"ref_hidden_field"}%>
			<%= text_field_tag "dep_info",f.object.parent_dep.to_s,:class=>"ref" %>
			<a href="#" class-data="Dep" self="true"><span class="reference"></span></a>			
		</div>
	</div>
</div>
</div>
<% end %>
