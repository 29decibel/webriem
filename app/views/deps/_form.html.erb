<%= form_for @dep,:remote=>true do |f| %>
<div class="form_title">
	<h3><%= @title%></h3>
</div>
<div class="actions">
	<%= link_to '新增', new_dep_path,:class=>"button2" %>
	<%= link_to "保存",{:href=>"#"},:class=>"submit button2" %>
	<%= link_to '返回', deps_path,:class=>"button2" %>
</div>
<div class="form_area">
<div class="form_block">
	<div class="form_field">
		<%= f.label "编码#{mark_required(f.object,:code)}" %>			
		<%= f.text_field :code,:class=>"input1 " %>
	</div>
	<div class="form_field">
		<%= f.label "名称#{mark_required(f.object,:name)}" %>
		<%= f.text_field :name,:class=>"input1 " %>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "所属组织结构#{mark_required(f.object,:version)}" %>			
		<%= f.text_field :version,:class=>"input1" %>
	</div>
	<div class="form_field">
		<%= f.label "启用时间#{mark_required(f.object,:start_date)}" %>
		<%= f.text_field :start_date,:class=>"datepicker input1" %>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "停止使用时间#{mark_required(f.object,:end_date)}" %>			
		<%= f.text_field :end_date,:class=>"datepicker input1" %>
	</div>
	<div class="form_field">
		<%= f.label "对应U8编码#{mark_required(f.object,:u8dep_code)}" %>
		<%= f.text_field :u8dep_code,:class=>"input1" %>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "上级部门}" %>			
		<div class="reference">
			<%= f.hidden_field :parent_dep_id,{:class=>"ref_hidden_field"}%>
			<%= text_field_tag "dep_info",f.object.parent_dep.to_s,:class=>"ref" %>
			<a href="#" class-data="Dep" self="true"><span class="reference"></span></a>			
		</div>
	</div>
</div>
</div>
<% end %>
