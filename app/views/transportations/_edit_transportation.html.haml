-form_for transportation,:remote=>true,:class=>"edit_inline" do |f|
  = render "shared/common_error",:resource=>transportation
  =f.hidden_field :id
  .form_field
    %span.label= f.label "#{I18n.t('common_attr.name')}#{mark_required(f.object,:name)}" 
    %span.value= f.text_field :name,:class=>"input1 "+ mark_required(@transportation, :name) 
  .form_field
    %span.label= f.label "#{I18n.t('common_attr.code')}#{mark_required(f.object,:code)}" 
    %span.value= f.text_field :code,:class=>"input1 "+ mark_required(@transportation, :code) 
  =render "basic_setting/fb_actions"
