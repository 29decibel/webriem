= form_for [@vrv_project,@network_condition],:html=>{:class=>'form-stacked'} do |f|
  -f.object.class.column_names.reject{|cn|%w(id created_at updated_at vrv_project_id).include? cn}.each do |cn|
    =tb_input_field(f,cn,:as=>'radio')
  =tb_has_many_field(f,:products)
  .actions
    = f.submit '保存',:class=>'btn primary'
    =link_to "放弃", [@vrv_project,@network_condition],:class=>'btn'
