= form_for @bxy_project do |f|
  -if @bxy_project.errors.any?
    .alert-message.error
      %p=@bxy_project.errors.full_messages.join(',')
  =tb_input_field(f,'name')
  =tb_input_field(f,'code')
  =tb_input_field(f,'customer')
  =tb_input_field(f,'contact_person')
  .actions
    = f.submit '保存',:class=>'btn primary'
    = link_to '取消', bxy_projects_path,:class=>'btn'
