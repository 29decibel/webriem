<h3 class="form_title">费用类型列表</h3>
<table class="hor-zebra">
  <tr>
    <th>编码</th>
    <th>名称</th>
    <th>费用属性</th>
    <th>停用日期</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fees.each do |fee| %>
  <tr class="<%= "odd" if fee.id%2==0 %>">
    <td><%= fee.code %></td>
    <td><%= fee.name %></td>
    <td><%= fee.attr_name %></td>
    <td><%= fee.end_date %></td>
    <td><%= link_to '查看', fee %></td>
    <td><%= link_to '编辑', edit_fee_path(fee) %></td>
    <td><%= link_to '删除', fee, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '添加费用类型', new_fee_path %>