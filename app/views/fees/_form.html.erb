<%= form_for(@fee,:remote=>true) do |f| %>
<div class="form_title">
	<h3><%= @title%></h3>
</div>
<div class="field">
	<%= f.label "编码",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :code,:class=>"basic_input "+ mark_required(@fee, :code) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="field">
	<%= f.label "名称",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :name,:class=>"basic_input "+ mark_required(@fee, :name) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="field">
	<%= f.label "费用属性",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.select :attr,Fee::ENUMS_ATTR,{:include_blank => 'None'},{:class=>"basic_input "} %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="field">
	<%= f.label "停用日期",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :end_date,:class=>"datepicker basic_input "+ mark_required(@fee, :end_date) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
  <div class="field">
  	<%=f.label "所属费用类型",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= collection_select(:fee, :parent_fee_id, Fee.all, :id, :name, {:include_blank => 'None'},{:class=>"basic_input"})%>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>	
  </div>
  <div class="actions">
    <%= f.submit "保存",:class=>"button2" %>
	<%= link_to '返回', fees_path,:class=>"button2" %>
  </div>
<% end %>