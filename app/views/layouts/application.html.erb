<!DOCTYPE html>
<html>
<head>
  <title>网上报销系统</title>
  <%= stylesheet_link_tag :all,:recursive => true %>
  <%= javascript_include_tag "jquery.js" %>
  <%= javascript_include_tag "nested_form.js" %>
  <%= javascript_include_tag "jquery-ui-1.8.4.custom.min.js" %>
  <%= javascript_include_tag "datepicker_cn.js"%>
  <%= javascript_include_tag "rails.js" %>
  <%= javascript_include_tag "application.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="header">
		<h2 id="title">网上报销系统</h2>
		<!--user log in info-->
		<div id="user_nav">
			<% if user_signed_in? %>  
			    欢迎<%= current_user.name %>. <%= link_to "注销", destroy_user_session_path %>  
			<% else %>  
			    <%= link_to "登录", new_user_session_path %>  
			<% end %>
		</div>		
	</div>
	<div id="main_area">
		<% if user_signed_in? %>
		<div id="menu">
			<div class="menu">
				<div class="menu_header">
					<%= link_to "我的任务",home_page_path%>
				</div>				
			</div>
			<div class="menu">
				<div class="menu_header">
					<%= link_to "基础档案",{},:href=>"#"%>
				</div>
				<div class="menu_item"><%= link_to "部门",:deps%></div>
				<div class="menu_item"><%= link_to "职务",:duties%></div>
				<div class="menu_item"><%= link_to "员工",:people%></div>
				<div class="menu_item"><%= link_to "费用类型",:fees%></div>
				<div class="menu_item"><%= link_to "地区",:regions%></div>
				<div class="menu_item"><%= link_to "交通方式",:transportations%></div>
				<div class="menu_item"><%= link_to "住宿方式",:lodgings%></div>
				<div class="menu_item"><%= link_to "结算方式",:settlements%></div>
				<div class="menu_item"><%= link_to "费用标准",:fee_standards%></div>
				<div class="menu_item"><%= link_to "项目",:projects%></div>
				<div class="menu_item"><%= link_to "预算数据",:budgets%></div>
				<div class="menu_item"><%= link_to "币种",:currencies%></div>
				<div class="menu_item"><%= link_to "科目设置",:subjects%></div>
				<div class="menu_item"><%= link_to "帐号",:accounts%></div>
				<div class="menu_item"><%= link_to "审批流设置",:work_flows%></div>
			</div>
			<div class="menu">
				<div class="menu_header">
					<%= link_to "单据",{},:href=>"#"%>
				</div>
				<% (1..9).each do |num| %>
					<div class="menu_item"><%= link_to doc_type_name(num),doc_heads_path(:doc_type=>num)%></div>
				<% end %>
			</div>
			<div class="menu">
				<%= link_to "反馈",feed_backs_path%>
			</div>			
		</div>
		<% end %>
		<!--++++++++++++++++++++++++++++++++++contents goes here++++++++++++++++-->
		<div id="content">
			<div id="info">
				<% if notice %>
				<div class="info notice"><%= notice %></div>
				<% end %>
				<% if alert %>
				<div class="info alert"><%= alert %></div>
				<% end %>
			</div>	
			<%= yield %>
		</div>		
	</div>
	<div id="footer">
		<%= image_tag "29decibel.png"%>
		<div id="desc">
			<p id="en">29Decibel Studio</p>
		</div>

	</div> 
</body>
</html>
