<!DOCTYPE html>
<html>
<head>
  <title>网上报销系统</title>
  <%= stylesheet_link_tag :all,:recursive => true %>
  <%= javascript_include_tag "jquery.js" %>
  <%= javascript_include_tag "jquery-ui-1.8.4.custom.min.js" %>
  <%= javascript_include_tag "datepicker_cn.js"%>
  <%= javascript_include_tag "rails.js" %>
  <%= javascript_include_tag "application.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="header">
		<h2 id="title">网上报销系统</h2>
		<ul id="menu">
			<li><a href="/task/index">首页</a>
		    <li><a href="#">档案管理</a>
		        <ul>
		            <li><%= link_to "部门",:deps%></li>
					<li><%= link_to "职务",:duties%></li>
					<li><%= link_to "员工",:people%></li>
					<li><%= link_to "费用类型",:fees%></li>
					<li><%= link_to "地区",:regions%></li>
					<li><%= link_to "交通方式",:transportations%></li>
					<li><%= link_to "住宿方式",:lodgings%></li>
					<li><%= link_to "结算方式",:settlements%></li>
					<li><%= link_to "费用标准",:fee_standards%></li>
					<li><%= link_to "项目",:projects%></li>
					<li><%= link_to "预算数据",:budgets%></li>
					<li><%= link_to "币种",:currencies%></li>
					<li><%= link_to "科目设置",:subjects%></li>
		        </ul>
		    </li>
			<li><a href="#">借付款单据</a>
		        <ul>
		            <li><a href="#">借款单</a></li>
		            <li><a href="#">付款单</a></li>
		        </ul>
		    </li>
		    <li><a href="#">报销单据</a>
		        <ul>
		            <li><a href="#">日常费用报销</a></li>
		            <li><a href="#">差旅费用报销</a></li>
		            <li><a href="#">福利费用报销</a></li>
		            <li><a href="#">加班费用报销</a></li>
					<li><a href="#">交际费用报销</a></li>
		        </ul>
		    </li>
			<li><a href="#">内部单据</a>
		        <ul>
		            <li><a href="#">收款通知单</a></li>
		            <li><a href="#">结汇申请单</a></li>
		            <li><a href="#">现金提取申请单</a></li>
		            <li><a href="#">购买理财产品申请单</a></li>
					<li><a href="#">赎回理财产品申请单</a></li>
		        </ul>
		    </li>
		</ul>
		<!--user log in info-->
		<div id="user_nav">
			<% if user_signed_in? %>  
			    欢迎<%= current_user.user_name %>. <%= link_to "注销", destroy_user_session_path %>  
			<% else %>  
			    <%= link_to "注册", new_user_registration_path %> | 
			    <%= link_to "登录", new_user_session_path %>  
			<% end %>
		</div>		
	</div>
	<br/>
	<div id="main_content">
		<div id="info">
			<% if notice %>
			<div class="info notice"><%= notice %></div>
			<% end %>
			<% if alert %>
			<div class="info alert"><%= alert %></div>
			<% end %>
		</div>	
		<%= yield %>
	</div>
	<div id="footer">
		<img src="../images/29decibel.png"/>
		<div id="desc">
			<p id="en">29Decibel Studio</p>
		</div>

	</div> 
</body>
</html>
