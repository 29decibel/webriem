<!DOCTYPE html>
<html>
<head>
  <title>网上报销系统</title>
  <%= stylesheet_link_tag :all,:recursive => true %>
  <%= javascript_include_tag "jquery.js" %>
  <%= javascript_include_tag "nested_form.js" %>
  <%= javascript_include_tag "jquery-ui-1.8.4.custom.min.js" %>
  <%= javascript_include_tag "datepicker_cn.js"%>
  <%= javascript_include_tag "rails.js" %>
  <%= javascript_include_tag "application.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="header">
		<h2 id="title">网上报销系统</h2>
		<% if user_signed_in? %>
		<ul id="menu">
			<li><%= link_to "首页",home_page_path%></li>
		    <li><a href="#">档案管理</a>
		        <ul>
		            <li><%= link_to "部门",:deps%></li>
					<li><%= link_to "职务",:duties%></li>
					<li><%= link_to "员工",:people%></li>
					<li><%= link_to "费用类型",:fees%></li>
					<li><%= link_to "地区",:regions%></li>
					<li><%= link_to "交通方式",:transportations%></li>
					<li><%= link_to "住宿方式",:lodgings%></li>
					<li><%= link_to "结算方式",:settlements%></li>
					<li><%= link_to "费用标准",:fee_standards%></li>
					<li><%= link_to "项目",:projects%></li>
					<li><%= link_to "预算数据",:budgets%></li>
					<li><%= link_to "币种",:currencies%></li>
					<li><%= link_to "科目设置",:subjects%></li>
					<li><%= link_to "帐号",:accounts%></li>
					<li><%= link_to "审批流设置",:work_flows%></li>
		        </ul>
		    </li>
			<li><a href="#">单据管理</a>
		        <ul>
					<% (1..9).each do |num| %>
						<li><%= link_to doc_type_name(num),doc_heads_path(:doc_type=>num)%></li>
					<% end %>
		        </ul>
		    </li>
			<li><%= link_to "反馈",feed_backs_path%></li>
		</ul>
		<% end %>
		<!--user log in info-->
		<div id="user_nav">
			<% if user_signed_in? %>  
			    欢迎<%= current_user.name %>. <%= link_to "注销", destroy_user_session_path %>  
			<% else %>  
			    <%= link_to "登录", new_user_session_path %>  
			<% end %>
		</div>		
	</div>
	<br/>
	<div id="main_content">
		<div id="info">
			<% if notice %>
			<div class="info notice"><%= notice %></div>
			<% end %>
			<% if alert %>
			<div class="info alert"><%= alert %></div>
			<% end %>
		</div>	
		<%= yield %>
	</div>
	<div id="footer">
		<%= image_tag "29decibel.png"%>
		<div id="desc">
			<p id="en">29Decibel Studio</p>
		</div>

	</div> 
</body>
</html>
