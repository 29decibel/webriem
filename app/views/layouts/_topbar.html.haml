.topbar_wrapper
  .topbar
    .fill
      .container
        %h3=link_to "网上报销系统", root_url,:remote=>true
        -if current_user
          %ul
            %li.dropdown{'data-dropdown'=>"dropdown"}
              =link_to '我的单据','#',:class=>'dropdown-toggle'
              %ul.dropdown-menu
                %li=link_to I18n.t("menu.my_docs"),'/task/my_docs',:remote=>true
            %li.dropdown{'data-dropdown'=>"dropdown"}
              =link_to '添加报销单','#',:class=>'dropdown-toggle'
              %ul.dropdown-menu
                -DocMetaInfo.all.each do |dm|
                  %li=link_to dm.display_name,"/doc_heads/new?doc_meta_info_id=#{dm.id}",:remote=>true
          %ul.nav.secondary-nav
            %li=link_to "欢迎, #{current_user.person.name}",root_url
            %li=link_to "注销",destroy_user_session_path,:method=>:delete
