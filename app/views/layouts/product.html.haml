!!! 5
%html
  %head
    %meta(http-equiv="Content-type" content="text/html; charset=utf-8")
    %meta(name="description" content="简洁高效的网上报销系统,支持对用友U8系统生成凭证,强大的费用管理统计,多组织支持,多语言支持弹性的单据审批流设置")
    %meta(name="keywords" content="费用报销系统,网上报销系统,费用管理软件,报销管理软件,费用报销,多组织费用报销,网上审批系统,审批流,国际化支持")
    %title Online Expense System 网上报销系统
    = stylesheet_link_tag "product_page","jquery.fancybox-1.3.4",:cache=>"homepage"
    = javascript_include_tag "lib/jquery-1.5.1.min.js"
    = javascript_include_tag "lib/jquery_ujs.js" 
    = javascript_include_tag "lib/jquery.fancybox-1.3.4.pack.js"
    = javascript_include_tag "lib/jquery.easing-1.3.pack.js"
    = javascript_include_tag "lib/jquery.mousewheel-3.0.4.pack.js"
    :javascript
      $(window).load(function() {
         $("a.fancybox").fancybox({
              'transitionIn'  : 'elastic',
              'transitionOut' : 'elastic',
              'speedIn'   : 300, 
              'speedOut'    : 200, 
              'overlayShow' : true,
              'height'      : '400'
          });

          
        });
  %body
    #wrapper
      #header
        .logo OES 网上报销系统
        .menu
          %ul
            %li= link_to "首页", home_index_url
            %li= link_to "联系我们", home_contact_us_url
            %li= link_to "Blog", "http://oesnow.com:8033"
      #content=yield
      #footer
        .copy_right 2010-2011 Online Expense System
