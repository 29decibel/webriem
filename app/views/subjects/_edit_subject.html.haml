-form_for subject,:remote=>true,:class=>"edit_inline" do |f|
  = render "shared/common_error",:resource=>subject
  =f.hidden_field :id
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.subject.business_type_id')}#{mark_required(f.object,:business_type)}" 
    %span.value= reference_select "business_type_id","BusinessType",:text=>f.object.business_type.to_s,:value=>f.object.business_type_id,:f=>f
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.subject.fee_id')}#{mark_required(f.object,:fee)}" 
    %span.value= reference_select "fee_id","Fee",:text=>f.object.fee.to_s,:value=>f.object.fee_id,:f=>f
  .form_field
    %span.label= f.label "#{I18n.t('common_attr.dep')}#{mark_required(f.object,:dep)}"
    %span.value= reference_select "dep_id","Dep",:text=>f.object.dep.to_s,:value=>f.object.dep_id,:f=>f
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.subject.u8_fee_subject')}#{mark_required(f.object,:u8_fee_subject)}"
    %span.value= f.text_field :u8_fee_subject,:class=>"input1 "
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.subject.u8_borrow_subject')}#{mark_required(f.object,:u8_borrow_subject)}" 
    %span.value= f.text_field :u8_borrow_subject,:class=>"input1 " 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.subject.u8_reim_subject')}#{mark_required(f.object,:u8_reim_subject)}"
    %span.value= f.text_field :u8_reim_subject,:class=>"input1 "
  =render "basic_setting/fb_actions"
