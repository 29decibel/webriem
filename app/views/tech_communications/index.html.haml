.page-header
  %h3 技术交流

%table
  %tr
    %th 时间
    %th 交流内容
    %th
    %th
    %th

  - @tech_communications.each do |tech_communication|
    %tr
      %td= tech_communication.date
      %td= tech_communication.contents
      %td= link_to '查看', [@vrv_project,tech_communication]
      %td= link_to '修改', [@vrv_project,tech_communication]
      %td= link_to '删除', [@vrv_project,tech_communication], :confirm => '确定删除?', :method => :delete

.actions
  -if @vrv_project.star?
    = link_to '添加技术交流', new_vrv_project_tech_communication_path(@vrv_project),:class=>'btn primary'
