.page-header
  %h3 近30天项目变更明细
.activities
  -@activities.each do |act|
    .activity
      %span.label= act[:user]
      =act[:event]
      =act[:current_item]
      %span.time
        时间:
        =act[:time]
      -if act[:change]
        .changes
          -act[:change].each do |col,c|
            .change= "把#{col}从#{c[:from]}改为#{c[:to]}"
