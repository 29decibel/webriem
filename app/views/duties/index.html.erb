<div class="form_title">
	<h3>职务列表</h3>
</div>
<div class="actions">
	<%= link_to '添加职务', new_duty_path,:class=>"button2" %>
</div>
<table class="hor-zebra">
  <tr>
    <th>名称</th>
    <th>编码</th>
    <th></th>
    <th></th>
  </tr>

<% @duties.each do |duty| %>
  <tr>
    <td><%= duty.name %></td>
    <td><%= duty.code %></td>
    <td class="action"><%= link_to '查看', duty %></td>
    <td class="action"><%= link_to '删除', duty, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>