<%= form_for(@settlement,:remote=>true) do |f| %>
<div class="form_title">
	<h3><%= @title%></h3>
</div>
<div class="actions">
  <%= link_to "保存",{:href=>"#"},:class=>"submit button2" %>
	<%= link_to '返回', settlements_path,:class=>"button2" %>
</div>
<div class="form_area">
<div class="form_block">
	<div class="form_field">
		<%= f.label "编码" %>			
		<%= f.text_field :code,:class=>"input1 "+ mark_required(@settlement, :code) %>
	</div>
	<div class="form_field">
		<%= f.label "结算方式" %>
		<%= f.text_field :name,:class=>"input1 "+ mark_required(@settlement, :name) %>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "结算科目" %>			
		<%= f.text_field :subject,:class=>"input1 "+ mark_required(@settlement, :subject) %>
	</div>
</div>
</div>
<% end %>