<%= form_for(@settlement,:remote=>true) do |f| %>
<div class="form_title">
	<h3><%= @title%></h3>
</div>
<div class="actions">
  <%= link_to "保存",{:href=>"#"},:class=>"submit button2" %>
	<%= link_to '返回', settlements_path,:class=>"button2" %>
</div>
<div class="field">
	<%= f.label "编码",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :code,:class=>"basic_input "+ mark_required(@settlement, :code) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="field">
	<%= f.label "计算方式",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :name,:class=>"basic_input "+ mark_required(@settlement, :name) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="field">
	<%= f.label "结算科目",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :subject,:class=>"basic_input "+ mark_required(@settlement, :subject) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>

<% end %>