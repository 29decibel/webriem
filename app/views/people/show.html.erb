<h3 class="form_title">员工详细信息</h3>
<div id="details">
	<!--=========================================-->
	<div class="field">
		<span class="attr">姓名:</span>
		<span class="value"><%= @person.name %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">员工编号:</span>
		<span class="value"><%= @person.code %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">性别:</span>
		<span class="value"><%= @person.gender_name %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">所在部门:</span>
		<span class="value"><%= @person.dep.name %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">职务:</span>
		<span class="value"><%= @person.duty.name %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">直属领导:</span>
		<span class="value"><%= @person.boss==nil ? "":@person.boss.name %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">电话:</span>
		<span class="value"><%= @person.phone %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">E-Mail:</span>
		<span class="value"><%= @person.e_mail %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">身份证号码:</span>
		<span class="value"><%= @person.ID_card %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">银行帐号:</span>
		<span class="value"><%= @person.bank_no %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">开户行:</span>
		<span class="value"><%= @person.bank %></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">离职日期:</span>
		<span class="value"><%= @person.end_date.to_date%></span>
    </div>
	<!--=========================================-->
	<div class="field">
		<span class="attr">信用额度:</span>
		<span class="value"><%= @person.credit_limit %></span>
    </div>
</div>

<%= link_to '编辑', edit_person_path(@person) %> |
<%= link_to '返回', people_path %> |
<%= link_to '添加员工', new_person_path %>