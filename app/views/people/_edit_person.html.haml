-form_for person,:remote=>true,:class=>"edit_inline" do |f|
  = render "shared/common_error",:resource=>person
  =f.hidden_field :id
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.name')}#{mark_required(f.object,:name)}" 
    %span.value= f.text_field :name,:class=>"input1 " 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.code')}#{mark_required(f.object,:code)}" 
    %span.value= f.text_field :code,:class=>"input1 " 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.gender')}#{mark_required(f.object,:gender)}" 
    %span.value= f.select :gender, Person::ENUMS_GENDER,{},{:class=>"basic_input "} 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.person_type_id')}#{mark_required(f.object,:person_type)}" 
    %span.value= collection_select(:person, :person_type_id, PersonType.all, :id, :name, {:include_blank => 'æ— '},{:class=>"basic_input"}) 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.dep_id')}#{mark_required(f.object,:dep_id)}" 
    %span.value= ts "dep_id","Dep",:text=>f.object.dep.to_s,:value=>f.object.dep_id,:f=>f
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.duty_id')}#{mark_required(f.object,:duty_id)}" 
    %span.value= ts "duty_id","Duty",:text=>f.object.duty.to_s,:value=>f.object.duty_id,:f=>f
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.phone')}#{mark_required(f.object,:phone)}" 
    %span.value= f.text_field :phone,:class=>"input1 number" 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.role_id')}#{mark_required(f.object,:role_id)}"
    %span.value= ts "role_id","Role",:text=>f.object.role.to_s,:value=>f.object.role_id,:f=>f
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.e_mail')}#{mark_required(f.object,:e_mail)}" 
    %span.value= f.text_field :e_mail,:class=>"input1 " 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.ID_card')}#{mark_required(f.object,:ID_card)}" 
    %span.value= f.text_field :ID_card,:class=>"input1 number" 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.bank_no')}#{mark_required(f.object,:bank_no)}" 
    %span.value= f.text_field :bank_no,:class=>"input1 number" 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.bank')}#{mark_required(f.object,:bank)}" 
    %span.value= f.text_field :bank,:class=>"input1 " 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.end_date')}#{mark_required(f.object,:end_date)}" 
    %span.value= f.text_field :end_date,:class=>"datepicker input1 " 
  .form_field
    %span.label= f.label "#{I18n.t('activerecord.attributes.person.credit_limit')}#{mark_required(f.object,:credit_limit)}" 
    %span.value= f.text_field :credit_limit,:class=>"input1 number" 
  =render "basic_setting/fb_actions"
