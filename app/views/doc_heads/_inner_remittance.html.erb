<div class="form_block">
	<div class="form_field large">
		<%= f.label "#{I18n.t('activerecord.attributes.inner_remittance.amount')}" ,:class=>"large"%>
		<%= f.text_field :amount,:class=>"input1 large" %>  
	</div>
	<div class="form_field">
		<%= f.label "#{I18n.t('activerecord.attributes.inner_remittance.currency_id')}" ,:class=>"large"%>
		<div class="reference">
			<%= f.hidden_field :currency_id,{:class=>"ref_hidden_field"}%>
			<%= text_field_tag "currency_info",detail_doc.currency.to_s,:class=>"ref" %>
