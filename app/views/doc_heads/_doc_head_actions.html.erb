<%= link_to "#{I18n.t('common_op.btn_new')}", new_doc_head_path(:doc_type=>doc_head.doc_type),:class=>"button2" %>
<%= link_to "#{I18n.t('common_op.btn_save')}",{:href=>"#"},:class=>"submit button2" %>
<% if !doc_head.new_record? and doc_head.doc_state==0 %>
	<%= link_to_function "提交审批","select_approver_or_begin_work_flow()",:class=>"button2"%>
<% end %>
<% if doc_head.person==current_user.person and doc_head.doc_state==1%>
	<%= link_to '撤销', {:controller=>"doc_heads",:action=>"giveup",:doc_id=>doc_head.id},:remote=>true,:class=>"button2" %>
<% end %>
<% if doc_head.doc_state>=2%>
	<%= link_to '打印', {:controller=>"doc_heads",:action=>"print",:doc_id=>doc_head.id},:class=>"button2" %>
<% end %>
<% if current_user.person.person_type and  ["CA","HR","FI"].include? current_user.person.person_type.code %>
	<%= link_to '单据不合格提醒', {:controller=>"doc_heads",:action=>"doc_failed",:doc_id=>doc_head.id},:remote=>true,:class=>"button2" %>
<% end %>
<%= link_to '我的单据', my_docs_path,:class=>"button2" %>
<% if doc_head.doc_state==2 and current_user.person.person_type and  current_user.person.person_type.code=="CA"%>
	<%= link_to "确认付款",{:controller=>"doc_heads",:action=>"pay",:doc_id=>doc_head.id},:remote=>true,:class=>"button2"%>
<% end %>
