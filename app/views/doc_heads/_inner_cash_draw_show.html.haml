.form_area.show_only
  .show_field
    %span.label=  "#{I18n.t('common_attr.cash_draw_account')}"
    %span.value= d_item.account.to_s
  .show_field
    %span.label=  "#{I18n.t('common_attr.cash_draw_money_remain')}"
    %span.value= d_item.now_remain_amout
  .doc_detail
    .form_title
      %h3
        = I18n.t('common_attr.add_apply_item')
        = image_tag "currency_yuan.png"
        %span.doc_total_amount.normal 0.0
    -if d_item.cash_draw_items.count>0
      .form_area#cash_draw_items#form_block#show_only
        -d_item.cash_draw_items.each do  |item|
          = render :partial=>'cash_draw_item_show',:locals=>{:c_item=>item}
