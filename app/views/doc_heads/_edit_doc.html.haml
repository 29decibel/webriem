      = f.label "#{I18n.t('activerecord.attributes.doc_head.doc_no')}#{mark_required(f.object,:doc_no)}",:class=>""
      = f.hidden_field :doc_no 
      = f.hidden_field :id
      = f.hidden_field :doc_type 
      .input
        %span.uneditable-input.doc_no.value= doc.doc_no
    .clearfix
      = f.label "#{I18n.t('activerecord.attributes.doc_head.person_id')}",:class=>"" 
      .input
        %span.uneditable-input= doc.person
      = f.hidden_field :person_id 
