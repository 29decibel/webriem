:javascript
  tokenize();
  //register currency change event
  $("input[data-model=Currency].token-input").live('token:add',function(e,data){
    var rate = $(this);
    $.get('/currency/'+data.id,function(currency){
      rate.closest('fieldset').find('.doc_rate').val(currency.default_rate);
      rate.closest('fieldset').trigger('row:numberChanged');
    });
  });
  $("input[data-model=Currency].token-input").live('token:delete',function(e,data){
    $(this).closest('fieldset').find('.doc_rate').val('0.0');
    $(this).closest('fieldset').trigger('row:numberChanged');
  });
  //register rate and number change event and fire one
  $("input.doc_rate,input.doc_ori_amount").live('change',function(){
    var num=parseFloat($(this).val());
    $(this).val(!isNaN(num) ? num.toFixed(2) : 0.0);
    $(this).closest('fieldset').trigger("row:numberChanged");
  });
  //when change region type trigger change:region_select event
  console.log('being bind region type select change...');
  $(".region_type_select").live("change",function(e){
    console.log(e);
    console.log('control trigger region select change');
    //alert
    $(this).closest('fieldset').trigger("change:region_type");
  });
  //when travel days change , trigger change:travels_days
  $(".travel_days").live("change",function(){
    var num=parseFloat($(this).val());
    $(this).val(!isNaN(num) ? num.toFixed(2) : 0.0);
    console.log('trigger travel days change');
    $(this).closest('fieldset').trigger("change:fee_standard");
  });
  //triger
  $(function(){$("fieldset").trigger('row:numberChanged');});
