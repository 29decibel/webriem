%fieldset
  %span.sequence
  .show_field
    %span.label= "#{I18n.t('common_attr.afford_dep')}"
    %span.value= d_item.dep.to_s
  .show_field
    %span.label= "#{I18n.t('common_attr.project')}"
    %span.value= d_item.project.to_s
  .show_field
    %span.label= "#{I18n.t('common_attr.start_place')}"
    %span.value= d_item.start_place
  .show_field
    %span.label= "#{I18n.t('common_attr.end_place')}"
    %span.value= d_item.end_place
  .show_field
    %span.label= "#{I18n.t('common_attr.start_time')}"
    -start_time_string = d_item.start_time && d_item.start_time.to_s
    %span.datetimepicker.middle.value= d_item.start_time 
  .show_field
    %span.label= "#{I18n.t('common_attr.end_time')}"
    - end_time_string = d_item.end_time && d_item.end_time.to_s 
    %span.value= d_item.end_time 
  .show_field
    %span.label= "#{I18n.t('common_attr.reason')}"
    %span.value= d_item.reason
  .show_field
    %span.label= "#{I18n.t('common_attr.currency')}"
    %span.value= d_item.currency.to_s
  .show_field
    %span.label= "#{I18n.t('common_attr.rate')}"
    %span.value= d_item.rate
  .show_field
    %span.label= "#{I18n.t('common_attr.apply_amount')}"
    %span.value= d_item.ori_amount
  .show_field
    %span.label= "#{I18n.t('common_attr.ori_amount')}"
    %span.value= d_item.apply_amount
