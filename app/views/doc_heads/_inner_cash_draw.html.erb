<div class="form_area">
<div class="form_block">
	<div class="form_field">
		<%= f.label "#{I18n.t('common_attr.cash_draw_account')}" %>
		<div class="reference">
			<%= f.hidden_field :account_id,{:class=>"ref_hidden_field"}%>
			<%= text_field_tag "account_info",detail_doc.account.to_s,:class=>"ref large" %>
			<a href="#" class-data="Account"><span class="reference"></span></a>			
		</div>
	</div>
</div>
<div class="form_block">
	<div class="form_field">
		<%= f.label "#{I18n.t('common_attr.cash_draw_money_remain')}",:class=>"input_label" %>
		<%= f.text_field :now_remain_amout,:class=>"input1 "%>
	</div>
</div>
</div>
<div class="form_title">
	<h3><%= I18n.t('common_attr.add_apply_item')%></h3>
</div>
<div id="cash_draw_items form_block">
	<table class="form_input">
		<thead>
			<tr>	
				<th><%= I18n.t('common_attr.sequence')%></th>
			    <th><%= I18n.t('common_attr.used_for')%></th>
			    <th><%= I18n.t('common_attr.apply_amount')%></th>
				<th></th><!--给删除的-->
		    </tr>
	    <thead>
		<tbody>
			<% f.fields_for :cash_draw_items do |builder|  %>
				<%= render :partial => 'cash_draw_item_fields',:locals => { :f => builder }  %>
			<% end %>				
		</tbody>
		<tr>
			<th colspan="1"><%= link_to_add_fields "#{I18n.t('common_attr.add_detail')}",f,:cash_draw_items %></th>
			<td><%= I18n.t('common_attr.total_apply_amount')%></td>
			<td><%= text_field_tag 'total_amount', nil, :class => 'doc_total_amount normal'%></td>
			<td></td>
		</tr>		
	</table>
</div>
