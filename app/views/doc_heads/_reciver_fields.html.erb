<tr class="fields reciver">
	<td>  
		<%= f.text_field :sequence,:class=>"small table_row_sequence" %>  
	</td> 
	<td>
		<div class="reference">
			<%= f.hidden_field :settlement_id,{:class=>"ref_hidden_field"}%>
			<%= text_field_tag "settlement_info",f.object.settlement.to_s,:class=>"ref" %>
			<a href="#" class-data="Settlement"><span class="reference"></span></a>			
		</div>
	</td>
	<td>  
    <% if @doc_head.doc_type==2 %>
      <div class="reference">
        <%= f.hidden_field :supplier_id,{:class=>"ref_hidden_field"}%>
        <%= text_field_tag "supplier_info",f.object.supplier.to_s,:class=>"ref large" %>
        <a href="#" class-data="Supplier"><span class="reference"></span></a>			
      </div>
    <% else %>
      <%= f.text_field :company,:class=> "normal" %>  
    <% end %>
	</td>
	<td>  
		<%= f.text_field :bank,:class=>@doc_head.doc_type==2 ? "large bank" : "normal bank" %>  
	</td>
	<td>  
		<%= f.text_field :bank_no ,:class=>"large bank_no"%>  
	</td>
	<td>  
		<%= f.text_field :amount,:class=>"normal doc_ori_amount" %>  
	</td>
	<!--riem need the hr amount and finance amount-->
	<% if [9,11,13].include? @doc_head.doc_type%>
	<td>  
		<%= f.text_field :hr_amount,:class=>"normal number doc_HR_amount" %>  
	</td>
	<td>  
		<%= f.text_field :fi_amount,:class=>"normal number doc_FI_amount" %>  
	</td>	
	<% end %>
	<td>
		<%= f.hidden_field(:_destroy) %>
		<%= link_to_remove "#{I18n.t('common_attr.btn_delete')}", f %> 
	</td>
</tr>
