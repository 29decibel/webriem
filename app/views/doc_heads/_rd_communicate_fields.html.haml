%fieldset
  %legend
    = f.hidden_field(:_destroy) 
    = link_to_remove 
  %span.sequence
  .clearfix
    =f.label "#{I18n.t('common_attr.project')}"
    .input= ts "project_id","Project",:text=>f.object.project.to_s,:value=>f.object.project_id,:f=>f
  .clearfix
    =f.label "#{I18n.t('common_attr.place')}"
    .input= f.text_field :place,:class=>"normal" 
  .clearfix
    =f.label "#{I18n.t('common_attr.date')}"
    .input= f.text_field :meal_date,:class=>"datepicker normal" 
  .clearfix
    =f.label "#{I18n.t('common_attr.people_count')}"
    .input= f.text_field :people_count,:class=>"xsmall" 
  .clearfix
    =f.label "#{I18n.t('common_attr.join_together_person')}"
    .input= f.text_field :person_names,:class=>"middle" 
  .clearfix
    =f.label "#{I18n.t('common_attr.reason')}"
    .input= f.text_field :reason,:class=>"middle" 
  .clearfix
    =f.label "#{I18n.t('common_attr.currency')}"
    .input= ts "currency_id","Currency",:text=>f.object.currency.to_s,:value=>f.object.currency_id,:f=>f
  .clearfix
    =f.label "#{I18n.t('common_attr.rate')}"
    .input= f.text_field :rate,:value=> f.object.rate ? f.object.rate : default_rate,:class=>"xsmall doc_rate number" 
  .clearfix
    =f.label "#{I18n.t('common_attr.ori_amount')}"
    .input= f.text_field :ori_amount,:class=>"normal doc_ori_amount number" 
  .clearfix
    =f.label "#{I18n.t('common_attr.apply_amount')}"
    .input
      %span.uneditable-input.doc_apply_amount.number= f.object.apply_amount || 0
