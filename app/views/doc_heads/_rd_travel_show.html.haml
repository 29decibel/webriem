-if can_adjust_amount(d_item.doc_head,'HR') or can_adjust_amount(d_item.doc_head,'FI')
  #adjust_amount_wrapper
    .adjust_amount{'id'=>"adjust_amount_travel_#{d_item.id}"}
      -form_tag "/doc_heads/#{d_item.doc_head.id}/adjust_amount",:remote=>'true',:method=>:put do
        =hidden_field_tag 'resource_id',d_item.id
        =hidden_field_tag 'resource_type',d_item.class.name
        %h2 请输入需要调整的金额
        =text_field_tag 'amount'
        %br
        =link_to content_tag(:span,"确定"),"#",:class=>'minibutton submit'
%fieldset
  %span.sequence
  .show_field
    %span.label= "#{I18n.t('common_attr.travel_days')}"
    %span.value= d_item.days
  .show_field
    %span.label= "#{I18n.t('common_attr.region_type')}"
    %span.value= d_item.region_type
  .show_field
    %span.label= "#{I18n.t('common_attr.travel_place')}"
    %span.value= d_item.region.to_s
  .show_field
    %span.label= "#{I18n.t('common_attr.other_place')}"
    %span.value= d_item.custom_place
  .show_field
    %span.label= "#{I18n.t('common_attr.reason')}"
    %span.value= d_item.reason
  .show_field
    %span.label= "#{I18n.t('common_attr.fee_stan')}"
    %span.value= d_item.st_amount
  .show_field
    %span.label= "#{I18n.t('common_attr.currency')}"
    %span.value= d_item.currency.to_s
  .show_field
    %span.label= "#{I18n.t('common_attr.rate')}"
    %span.value= d_item.rate
  .show_field
    %span.label= "#{I18n.t('common_attr.ori_amount')}"
    %span.value= d_item.ori_amount
  .show_field
    %span.label= "#{I18n.t('common_attr.apply_amount')}"
    %span.value= d_item.apply_amount
  .show_field.hr_adjust
    %span.label= "#{I18n.t('common_attr.hr_amount')}"
    %span.value=  d_item.hr_amount || '无'
    -if can_adjust_amount(d_item.doc_head,'HR')
      =link_to "调整", "#adjust_amount_travel_#{d_item.id}",:class=>'pop'
  .show_field.hr_adjust
    %span.label= "#{I18n.t('common_attr.fi_amount')}"
    %span.value=  d_item.fi_amount || '无'
    -if can_adjust_amount(d_item.doc_head,'FI')
      =link_to "调整", "#adjust_amount_travel_#{d_item.id}",:class=>'pop'
:javascript
  $(function(){
    $("a.pop").fancybox({
      'transitionIn'  : 'elastic',
      'transitionOut' : 'elastic',
      'speedIn'   : 600, 
      'speedOut'    : 200, 
      'overlayShow' : false,
      'height'      : '400'
    });
  });

