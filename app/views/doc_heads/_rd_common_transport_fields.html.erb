<tr class="fields">
	<td>
		<%= f.text_field :sequence,:class=>"small table_row_sequence" %>  
	</td>
	<td>
		<div class="reference">
			<%= f.hidden_field :dep_id,{:class=>"ref_hidden_field"}%>
			<%= text_field_tag "dep_info",f.object.dep.to_s,:class=>"ref middle" %>
			<a href="#" class-data="Dep"><span class="reference"></span></a>			
		</div>
	</td> 
	<td>
		<div class="reference">
			<%= f.hidden_field :project_id,{:class=>"ref_hidden_field"}%>
			<%= text_field_tag "project_info",f.object.project.to_s,:class=>"ref middle" %>
			<a href="#" class-data="Project"><span class="reference"></span></a>			
		</div>
	</td>
	<td>
		<%= f.text_field :start_place,:class=>"normal" %>  
	</td>
	<td>
		<%= f.text_field :end_place,:class=>"normal" %>  
	</td>
	<td>
		<%- start_time_string = f.object.start_time && f.object.start_time.to_s -%>
		<%= f.text_field :start_time,:class=>"datetimepicker middle",:value => start_time_string %>  
	</td>
	<td>
		<%- end_time_string = f.object.end_time && f.object.end_time.to_s -%>
		<%= f.text_field :end_time,:class=>"datetimepicker middle",:value => end_time_string %>  
	</td>
	<td>
		<%= f.text_field :reason,:class=>"xlarge" %>  
	</td>
	<td>
		<div class="reference">
			<%= f.hidden_field :currency_id,{:class=>"ref_hidden_field"}%>
			<%= text_field_tag "currency_info",f.object.currency.to_s,:class=>"ref" %>
			<a href="#" class-data="Currency"><span class="reference"></span></a>			
		</div>
	</td>
	<td>
		<%= f.text_field :rate,:class=>"xsmall doc_rate number" %>  
	</td>
	<td>
		<%= f.text_field :ori_amount,:class=>"normal doc_ori_amount number" %>  
	</td>
	<td>
		<%= f.text_field :apply_amount,:class=>"doc_apply_amount normal number" %>  
	</td>
	<td>
		<%= f.hidden_field(:_destroy) %>
		<%= link_to_remove "#{I18n.t('common_attr.btn_delete')}", f %> 
	</td>
</tr>