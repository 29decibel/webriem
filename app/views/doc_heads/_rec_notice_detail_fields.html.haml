%fieldset
  %legend
    = f.hidden_field(:_destroy) 
    = link_to_remove 
  %span.sequence
  .form_field
    %span.label= "#{I18n.t('common_attr.apply_date')}"
    %span.value= f.text_field :apply_date,:class=>"datepicker normal" 
  .form_field
    %span.label= "#{I18n.t('common_attr.afford_dep')}"
    %span.value= ts "dep_id","Dep",:text=>f.object.dep.to_s,:value=>f.object.dep_id,:f=>f
  .form_field
    %span.label= "#{I18n.t('common_attr.project')}"
    %span.value= ts "project_id","Project",:text=>f.object.project.to_s,:value=>f.object.project_id,:f=>f
  .form_field
    %span.label= "#{I18n.t('activerecord.attributes.doc_head.rec_notice_details.content')}"
    %span.value= f.text_field :description,:class=>"large" 
  .form_field
    %span.label= "#{I18n.t('common_attr.currency')}"
    %span.value= ts "currency_id","Currency",:text=>f.object.currency.to_s,:value=>f.object.currency_id,:f=>f
  .form_field
    %span.label= "#{I18n.t('common_attr.rate')}"
    %span.value= f.text_field :rate,:value=> f.object.rate ? f.object.rate : default_rate,:class=>"xsmall doc_rate number" 
  .form_field
    %span.label= "#{I18n.t('common_attr.ori_amount')}"
    %span.value= f.text_field :ori_amount,:class=>"normal doc_ori_amount number" 
  .form_field
    %span.label= "#{I18n.t('activerecord.attributes.doc_head.rec_notice_details.amount')}"
    %span.value= f.label f.object.amount || 0,:class=>"normal doc_apply_amount number" 
