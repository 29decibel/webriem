%fieldset.split
  %span.sequence
  .form_field
    %span.label= "#{I18n.t('common_attr.afford_dep')}"  
    %span.value= d_item.dep.to_s
  .form_field
    %span.label= "#{I18n.t('common_attr.project')}"
    %span.value= d_item.project.to_s
  -if d_item.doc.doc_type==13 
    .form_field
      %span.label= "#{I18n.t('common_attr.fee')}"
      %span.value= d_item.fee.to_s
  .form_field
    %span.label= "#{I18n.t('common_attr.split_amount')}"
    %span.value= d_item.percent_amount
