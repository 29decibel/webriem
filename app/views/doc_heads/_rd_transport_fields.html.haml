%fieldset
  %legend
    = f.hidden_field(:_destroy) 
    = link_to_remove 
  %span.sequence
  .clearfix
    =f.label "#{I18n.t('common_attr.start_time')}"
    - start_time_string = f.object.start_date && f.object.start_date.to_s 
    .input= f.text_field :start_date,:class=>"datetimepicker middle",:value => start_time_string  
  .clearfix
    =f.label "#{I18n.t('common_attr.end_time')}"
    - end_time_string = f.object.end_date && f.object.end_date.to_s 
    .input= f.text_field :end_date,:class=>"datetimepicker middle",:value => end_time_string 
  .clearfix
    =f.label "#{I18n.t('common_attr.start_place')}"
    .input= f.text_field :start_position,:class=>"normal"  
  .clearfix
    =f.label "#{I18n.t('common_attr.end_place')}"
    .input= f.text_field :end_position,:class=>"normal" 
  .clearfix
    =f.label "#{I18n.t('common_attr.reason')}"
    .input= f.text_field :reason,:class=>"xlarge" 
  .clearfix
    =f.label "#{I18n.t('common_attr.transportation')}"
    .input= ts "transportation_id","Transportation",:text=>f.object.transportation.to_s,:value=>f.object.transportation_id,:f=>f
  .clearfix
    =f.label "#{I18n.t('common_attr.currency')}"
    .input= ts "currency_id","Currency",:text=>f.object.currency.to_s,:value=>f.object.currency_id,:f=>f
  .clearfix
    =f.label "#{I18n.t('common_attr.rate')}"
    .input= f.text_field :rate,:value=> f.object.rate ? f.object.rate : default_rate,:class=>"xsmall doc_rate number" 
  .clearfix
    =f.label "#{I18n.t('common_attr.ori_amount')}"
    .input= f.text_field :ori_amount,:class=>"normal doc_ori_amount number"  
  .clearfix
    =f.label "#{I18n.t('common_attr.apply_amount')}"
    .input= f.label f.object.apply_amount || 0,:class=>"doc_apply_amount normal number" 
