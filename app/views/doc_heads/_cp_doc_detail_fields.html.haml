%fieldset
  %legend
    = f.hidden_field(:_destroy)
    = link_to_remove
  %span.sequence
  .form_field
    %span.label= I18n.t('activerecord.attributes.doc_head.cp_doc_details.dep_id')
    %span.value= ts :dep_id,"Dep",:text=>f.object.dep.to_s,:value=>f.object.dep_id,:f=>f
  .form_field
    %span.label= I18n.t('activerecord.attributes.doc_head.cp_doc_details.project_id')
    %span.value= ts :project_id,"Project",:text=>f.object.project.to_s,:value=>f.object.project_id,:f=>f
  -if 2
    .form_field
      %span.label= "#{I18n.t('common_attr.fee')}"
      %span.value= ts :fee_id,"Fee",:text=>f.object.fee.to_s,:value=>f.object.fee_id,:f=>f
  .form_field
    %span.label= I18n.t('common_attr.used_for')
    %span.value= f.text_field :used_for,:class=>"xlarge" 
  .form_field
    %span.label= I18n.t('common_attr.currency')
    %span.value= ts :currency_id,"Currency",:text=>f.object.currency.to_s,:value=>f.object.currency_id,:f=>f
  .form_field
    %span.label= I18n.t('common_attr.rate')
    %span.value= f.text_field :rate,:value=> f.object.rate ? f.object.rate : default_rate,:class=>"xsmall doc_rate number" 
  .form_field
    %span.label= I18n.t('common_attr.apply_amount')
    %span.value= f.text_field :ori_amount,:class=>"normal doc_ori_amount number" 
  .form_field
    %span.label= I18n.t('common_attr.ori_amount')
    %span.value= f.text_field :rate_amount,:class=>"normal doc_apply_amount number" 
  = hidden_field_tag "hr_amount",f.object.rate_amount,:class=>"doc_HR_amount normal number" 
  = hidden_field_tag "fi_amount",f.object.rate_amount,:class=>"doc_FI_amount normal number" 

