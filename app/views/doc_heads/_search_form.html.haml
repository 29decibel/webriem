.form_title 检索条件
-form_tag '/doc_heads/search_docs',:remote=>true do 
  .search_field
    %span.label 申请人
    %span.value= ts 'search[person_id_eq]','Person'
  .search_field
    %span.label 部门
    %span.value= ts 'search[dep_id_eq]','Dep'
  .search_field
    %span.label 项目
    %span.value= ts 'search[project_id_eq]','Project'
  .search_field
    %span.label 单据类型
    %span.value= select 'search[resource_type_eq]','',DocRow::DocResourceTypes.to_a,:include_blank=>true
  .search_field.clear
    %span.label 申请日期区间
    %span.value
      = text_field_tag 'search[apply_date_gte]',"",:class=>'datepicker'
      = text_field_tag 'search[apply_date_lte]',"",:class=>'datepicker'
  .search_field
    %span.label 单据金额区间
    %span.value
      = text_field_tag 'search[apply_amount_gte]'
      = text_field_tag 'search[apply_amount_lte]'
  .actions
    = link_to content_tag(:span,"#{I18n.t('common_op.btn_search')}"),{:href=>"#"},:class=>"submit minibutton"
:javascript
  tokenize();
  $(".datepicker").datepicker();
