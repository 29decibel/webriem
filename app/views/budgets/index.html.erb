<h3 class="form_title">预算数据列表</h3>
<table class="hor-zebra">
  <tr>
    <th>费用类型</th>
    <th>项目</th>
    <th>部门</th>
	<th>全年预算</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @budgets.each do |budget| %>
  <tr class="<%= "odd" if budget.id%2==0 %>">
    <td><%= budget.fee_name %></td>
    <td><%= budget.project_name %></td>
    <td><%= budget.dep_name %></td>
	<td><%= budget.all %></td>
    <td><%= link_to '查看', budget %></td>
    <td><%= link_to '编辑', edit_budget_path(budget) %></td>
    <td><%= link_to '删除', budget, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>

