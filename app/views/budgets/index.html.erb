<div class="form_title">
	<h3>预算数据列表</h3>
</div>
<div class="actions">
	<%= link_to '添加预算数据', new_budget_path,:class=>"button2" %>
</div>
<table class="hor-zebra">
  <tr>
    <th>费用类型</th>
    <th>项目</th>
    <th>部门</th>
	<th>全年预算</th>
    <th></th>
    <th></th>
  </tr>

<% @budgets.each do |budget| %>
  <tr>
    <td><%= budget.fee_name %></td>
    <td><%= budget.project_name %></td>
    <td><%= budget.dep_name %></td>
	<td><%= budget.all %></td>
    <td><%= link_to '查看', budget %></td>
    <td><%= link_to '删除', budget, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>