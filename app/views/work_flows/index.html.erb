<div class="form_title">
	<h3>审批流列表</h3>
</div>
	<div class="actions">
		<%= link_to '添加一个审批流', new_work_flow_path,:class=>"button2" %>
	</div>
<table class="hor-zebra">
  <tr>
    <th>审批流名称</th>
    <th>应用的单据类型</th>
    <th></th>
    <th></th>
  </tr>

<% @work_flows.each do |work_flow| %>
  <tr>
    <td><%= work_flow.name %></td>
    <td><%= work_flow.doc_types %></td>
    <td class="action"><%= link_to '查看', work_flow %></td>
    <td class="action"><%= link_to '删除', work_flow, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>