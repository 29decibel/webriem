.page-header
  %h3 立项列表

%table
  %tr
    %th Customer
    %th Start date
    %th Amount
    %th Industry
    %th Agent
    %th
    %th
    %th

  - @vrv_projects.each do |vrv_project|
    %tr
      %td= vrv_project.customer
      %td= vrv_project.start_date
      %td= vrv_project.amount
      %td= vrv_project.industry
      %td= vrv_project.agent
      %td= link_to 'Show', vrv_project
      %td= link_to 'Edit', edit_vrv_project_path(vrv_project)
      %td= link_to 'Destroy', vrv_project, :confirm => 'Are you sure?', :method => :delete

.actions
  = link_to '申请立项', new_vrv_project_path,:class=>'btn'
