= form_for @vrv_project do |f|
  -f.object.class.column_names.reject{|cn|%w(id created_at updated_at human_star system_star state person_id current_approver_id current_approver_info_id ).include? cn}.each do |cn|
    =tb_input_field(f,cn)
  .page-header
    %h5 联系人信息
  =f.fields_for :customer_contact do |form|
    =tb_input_field(form,'name')
    =tb_input_field(form,'duty')
    =tb_input_field(form,'phone')
  .actions
    = f.submit '保存',:class=>'btn primary'
    =link_to "放弃", @vrv_project,:class=>'btn'
