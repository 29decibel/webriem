<%= form_for(@system_config) do |f| %>
<h3 class="form_title"><%= @title%></h3>
<div class="field">
	<%= f.label :key,:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :key,:class=>"basic_input" %><%= mark_required(@system_config, :key) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="field">
	<%= f.label :value,:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :value,:class=>"basic_input" %><%= mark_required(@system_config, :value) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="field">
	<%= f.label :description,:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :description,:class=>"basic_input" %><%= mark_required(@system_config, :description) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
  <div class="actions">
    <%= f.submit "保存" %>
  </div>
<% end %>