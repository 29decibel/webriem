<div class="form_title">
	<h3>反馈列表</h3>
</div>
<div class="actions">
	<%= link_to '添加反馈', new_feed_back_path,:class=>"button2" %>
</div>
<table class="hor-zebra">
  <tr>
    <th>内容</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feed_backs.each do |feed_back| %>
  <tr>
    <td><%= feed_back.content %></td>
    <td class="action"><%= link_to '查看', feed_back %></td>
    <td><%= link_to '编辑', edit_feed_back_path(feed_back) %></td>
    <td class="action"><%= link_to '删除', feed_back, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>