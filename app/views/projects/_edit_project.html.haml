<%= form_for(@project,:remote=>true) do |f| %>
%div class="form_title"
	%h3<%= @title%></h3>
</div>
%div class="actions"
			<%= link_to "#{I18n.t('common_op.btn_new')}", new_project_path,:class=>"button2" %>
  <%= link_to "#{I18n.t('common_op.btn_save')}",{:href=>"#"},:class=>"submit button2" %>
	<%= link_to "#{I18n.t('common_op.btn_return')}", projects_path,:class=>"button2" %>
</div>
%div class="form_area"
	%div class="form_field"
		%span class="label"<%= f.label "#{I18n.t('activerecord.attributes.project.name')}#{mark_required(f.object,:name)}" %></span>			
		%span class="value"<%= f.text_field :name,:class=>"input1 " %></span>
	</div>
	%div class="form_field"
		%span class="label"<%= f.label "#{I18n.t('activerecord.attributes.project.code')}#{mark_required(f.object,:code)}" %></span>
		%span class="value"<%= f.text_field :code,:class=>"input1 " %></span>
	</div>
	%div class="form_field"
		%span class="label"<%= f.label "#{I18n.t('activerecord.attributes.project.u8_project')}#{mark_required(f.object,:u8_project)}" %></span>			
		%span class="value"<%= f.text_field :u8_project,:class=>"input1 " %></span>
	</div>
	%div class="form_field"
		%span class="label"<%= f.label "#{I18n.t('activerecord.attributes.project.status')}#{mark_required(f.object,:status)}" %></span>			
    %span class="value"<%= f.select "status",Project::P_STATUS.map {|k,v| [v,k]},:class=>"input1 " %></span>
	</div>
</div>
<% end %>
