<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<h3 class="form_title">登录</h3>
<!--==================================================================-->
  <div class="field">
    <%= f.label "用户名",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :name,:class=>"basic_input" %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<!--==================================================================-->
  <div class="field">
    <%= f.label "密码",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.password_field :password,:class=>"basic_input" %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<!--==================================================================-->
  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.label "记住我吧",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.check_box :remember_me,:class=>"basic_input" %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
  <% end -%>

  <p><%= f.submit "登录" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>