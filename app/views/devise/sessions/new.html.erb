<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<!--==================================================================-->
  <div class="login_field">
    <%= f.label "用户名",:class=>"input_label" %>
	<div class="login_input_area">
		<p class="login_input">
			<%= f.text_field :name,:class=>"normal" %>
		</p>
	</div>
  </div>
<!--==================================================================-->
  <div class="login_field">
    <%= f.label "密码",:class=>"input_label" %>
	<div class="login_input_area">
		<p class="login_input">
			<%= f.password_field :password,:class=>"normal" %>
		</p>
		<p class="tip"></p>
	</div>
  </div>
<!--==================================================================-->
  <% if devise_mapping.rememberable? -%>
  <div class="login_field">
    <%= f.label "记住我吧",:class=>"input_label" %>
	<div class="login_input_area">
		<p class="login_input">
			<%= f.check_box :remember_me,:class=>"normal" %>
		</p>
	</div>
	<span class="error_message"></span>    
  </div>
  <% end -%>
<div class="login_actions">
	<%= f.submit "登录" %>
	<% if alert %>
		<spna id="error"><%= alert %></span>
	<% end %>
</div>
<% end %>

