<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
<div class="form_title"><h3>忘记密码?</h3></div>
<!--==================================================================-->
  <div class="field">
    <%= f.label "电子邮件",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :email,:class=>"basic_input" %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="actions">
	<%= link_to "重置密码",{:href=>"#"},:class=>"submit button2" %>
	<%= link_to "登录", new_session_path(resource_name),:class=>"button2"  %>
</div>
<% end %>