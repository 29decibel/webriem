<h2>更改您的密码</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <div class="field">
    <%= f.label "用户名",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.password_field :password,:class=>"basic_input" %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
  <div class="field">
    <%= f.label "确认新密码",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.password_field :password_confirmation,:class=>"basic_input" %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="actions">
	<%= link_to "更改密码",{:href=>"#"},:class=>"submit button2" %>
</div>
<% end %>

<%= render :partial => "devise/shared/links" %>