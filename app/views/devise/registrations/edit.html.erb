<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="field">
	<!--==================================================================-->
	  <div class="field">
	    <%= f.label "用户名",:class=>"input_label" %>
		<div class="input_area">
			<p class="input">
				<%= f.text_field :user_name,:class=>"basic_input" %>
			</p>
			<p class="tip"></p>
		</div>
		<span class="error_message"><%= resource.errors[:user_name][0]%></span>    
	  </div>
	<!--==================================================================-->
	  <div class="field">
	    <%= f.label "电子邮件",:class=>"input_label" %>
		<div class="input_area">
			<p class="input">
				<%= f.text_field :email,:class=>"basic_input" %>
			</p>
			<p class="tip"></p>
		</div>
		<span class="error_message"><%= resource.errors[:email][0]%></span>    
	  </div>
	<!--==================================================================-->
	  <div class="field">
	    <%= f.label "密码",:class=>"input_label" %>
		<div class="input_area">
			<p class="input">
				<%= f.password_field :password,:class=>"basic_input" %>
			</p>
			<p class="tip"></p>
		</div>
		<span class="error_message"><%= resource.errors[:password][0]%></span>    
	  </div>
	<!--==================================================================-->
	  <div class="field">
	    <%= f.label "确认密码",:class=>"input_label" %>
		<div class="input_area">
			<p class="input">
				<%= f.password_field :password_confirmation,:class=>"basic_input" %>
			</p>
			<p class="tip"></p>
		</div>
		<span class="error_message"><%= resource.errors[:password_confirmation][0]%></span>    
	  </div>
	<!--==================================================================-->
	  <div class="field">
	    <%= f.label "当前密码",:class=>"input_label" %>
		<div class="input_area">
			<p class="input">
				<%= f.password_field :current_password,:class=>"basic_input" %>
			</p>
			<p class="tip"></p>
		</div>
		<span class="error_message"><%= resource.errors[:current_password][0]%></span>    
	  </div>

  <p><%= f.submit "修改" %></p>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to "Back", :back %>
