<%= form_for(@account,:remote=>true) do |f| %>
<div class="form_title">
	<h3><%= @title%></h3>
</div>
<div class="field">
	<%= f.label "帐号名称",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :name,:class=>"basic_input" %><%= mark_required(@account, :name) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
<div class="field">
	<%= f.label "帐号",:class=>"input_label" %>
	<div class="input_area">
		<p class="input">
			<%= f.text_field :account_no,:class=>"basic_input" %><%= mark_required(@account, :account_no) %>
		</p>
		<p class="tip"></p>
	</div>
	<span class="error_message"></span>    
  </div>
  <div class="actions">
    <%= f.submit "保存",:class=>"button2"  %>
	<%= link_to '返回', accounts_path,:class=>"button2" %>
  </div>
<% end %>