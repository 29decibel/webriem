<%= form_for(@account,:remote=>true) do |f| %>
<div class="form_title">
	<h3><%= @title%></h3>
</div>
<div class="actions">
	<%= link_to "#{I18n.t('common_op.btn_new')}", new_account_path,:class=>"button2" %>
 	<%= link_to "#{I18n.t('common_op.btn_save')}",{:href=>"#"},:class=>"submit button2" %>
	<%= link_to "#{I18n.t('common_op.btn_return')}", accounts_path,:class=>"button2" %>
</div>
<div class="form_area">
	<div class="form_block">
		<div class="form_field">
			<%= f.label "#{I18n.t('activerecord.attributes.account.name')}#{mark_required(f.object,:name)}" %>		
			<%= f.text_field :name,:class=>"input1" %>
		</div>
		<div class="form_field">
			<%= f.label "#{I18n.t('activerecord.attributes.account.account_no')}#{mark_required(f.object,:account_no)}" %>
			<%= f.text_field :account_no,:class=>"input1" %>
		</div>
	</div>
</div>
<% end %>