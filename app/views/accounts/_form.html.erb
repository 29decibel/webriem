<%= form_for(@account,:remote=>true) do |f| %>
<div class="form_title">
	<h3><%= @title%></h3>
</div>
<div class="actions">
  <%= link_to "保存",{:href=>"#"},:class=>"submit button2" %>
	<%= link_to '返回', accounts_path,:class=>"button2" %>
</div>
<div class="form_area">
	<div class="form_block">
		<div class="form_field">
			<%= f.label "帐号名称" %>		
			<%= f.text_field :name,:class=>"input1" %>
		</div>
		<div class="form_field">
			<%= f.label "帐号" %>
			<%= f.text_field :account_no,:class=>"input1" %>
		</div>
	</div>
</div>
<% end %>