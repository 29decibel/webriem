<div class="form_title">
  <h5>
    单据号为<%= doc.doc_no%>
    <% if doc.vouches.count>0 %>
      【最后更新时间<%= doc.vouches.order("updated_at desc").first.updated_at%>】
    <% end %>
    <%= link_to image_tag("/images/icons/database_refresh.png"),{:controller=>"vouch",:action=>"rg_vouch",:doc_id=>doc.id},:remote=>true %>
  </h5>
</div>    
<table class="hor-zebra">
  <tr>
    <th></th>
    <th>凭证分录号</th><th>部门</th>
    <th>借方科目</th><th>贷方科目</th>
    <th>项目</th><th>人员</th>
    <th>借方金额</th><th>贷方金额</th>
    <th>币种</th><th>汇率</th>
    <th>凭证日期</th><th>成单者</th>
      <th>附件张数</th>
  </tr>
  <% doc.vouches.each do  |v|%>
    <tr>
      <td><%= link_to image_tag("/images/icons/page_edit.png"),{:controller=>"vouch",:action=>"edit",:vouch_id=>v.id},:remote=>true %>
      <td><%= v[:inid]%></td><td><%= v[:cdept_id]%></td>
      <td><%= truncate(v[:ccode].to_s,:length=>10)%></td>
      <td><%= truncate(v[:ccode_equal].to_s,:length=>10)%></td>
      <td><%= v[:citem_id]%></td><td><%= v[:cperson_id]%></td>
      <td><%= v[:md]%></td><td><%= v[:mc]%></td>
      <td><%= v[:cexch_name]%></td><td><%= v[:nfrat]%></td>
      <td><%= v[:dbill_date]%></td><td><%= v[:cbill]%></td>
      <td><%= v[:idoc]%></td>
</td>
    </tr>
    <!--this tr is for edit-->
    <tr colspan="9">
      <div id="edit_vouch_<%= v.id%>" class="vouch_form"></div>
    </tr>
  <% end %>
</table>

