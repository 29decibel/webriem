!!! 5
%html
  %head
    %meta(http-equiv="Content-type" content="text/html; charset=utf-8")
    %title OES
    = stylesheet_link_tag "product_page","jquery.fancybox-1.3.4",:cache=>"homepage"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"
    = javascript_include_tag "jquery.fancybox-1.3.4.pack.js"
    = javascript_include_tag "jquery.easing-1.3.pack.js"
    = javascript_include_tag "jquery.mousewheel-3.0.4.pack.js"
    :javascript
      $(window).load(function() {
         $("a.screenshot").fancybox({
              'transitionIn'  : 'elastic',
              'transitionOut' : 'elastic',
              'speedIn'   : 300, 
              'speedOut'    : 200, 
              'overlayShow' : true,
              'height'      : '400',
              'hideOnContentClick':true
          });
          $('ul.menu a').click(function(){
            var num = $(this).attr('href')[1];
            var margin_top = 410*(parseInt(num)-1);
            $(".frame").css("margin-top",-margin_top);
          });
        });
  %body
    #wrapper
      #header
        .logo OES
        .menu
          %ul
            %li.current= link_to "首页", "#"
            %li= link_to "产品", "#"
            %li= link_to "演示", "#"
            %li= link_to "关于", "#"
      #content
        .short_intro
          %h3 专注于最适合中小企业的在线报销系统
        .features
          #stage
            .frame
              =image_tag "product_images/features/feature1.png"
              =image_tag "product_images/features/feature2.png"
              =image_tag "product_images/features/feature3.png"
              =image_tag "product_images/features/feature4.png"
          %ul.menu
            %li=link_to "方便的后台管理", "#1"
            %li=link_to "全面的单据管理", "#2"
            %li=link_to "美观易用的界面", "#3"
            %li=link_to "弹性的审批流机制", "#4"
            =link_to "在线体验(员工)", "/task/dashboard",:class=>"button orange demo"
            =link_to "在线体验(管理员)", "/admin",:class=>"button orange demo"
        .short_intro
          %h3 功能截图
        .screenshots
          .box
            =link_to image_tag("product_images/screenshots/ss1.png"),image_path("product_images/screenshots/ss1.png"),:class=>"screenshot"
          .box
            =link_to image_tag("product_images/screenshots/ss2.png"),image_path("product_images/screenshots/ss2.png"),:class=>"screenshot"
          .box
            =link_to image_tag("product_images/screenshots/ss3.png"),image_path("product_images/screenshots/ss3.png"),:class=>"screenshot"
          .box
            =link_to image_tag("product_images/screenshots/ss4.png"),image_path("product_images/screenshots/ss4.png"),:class=>"screenshot"
      #footer
        .copy_right 2010 OES System
