  </tr>

<% @property_types.each do |property_type| %>
  <tr class="<%= "odd" if property_type.id%2==0 %>">
    <td><%= property_type.name %></td>
    <td><%= property_type.code %></td>
    <td><%= link_to '查看', property_type %></td>
    <td><%= link_to '编辑', edit_property_type_path(property_type) %></td>
    <td><%= link_to '删除', property_type, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>

