%div class="form_title"
	%h3币种列表</h3>
</div>
%div class="actions"
	<%= link_to '添加币种', new_currency_path,:class=>"button2" %>
</div>
%table class="hor-zebra"
  %tr
    %th名称</th>
    %th编码</th>
    %th</th>
    %th</th>
  </tr>

<% @currencies.each do |currency| %>
  %tr
    %td<%= currency.name %></td>
    %td<%= currency.code %></td>
    %td class="action"<%= link_to '查看', currency %></td>
    %td class="action"<%= link_to '删除', currency, :confirm => '是否真的要删除?', :method => :delete %></td>
  </tr>
<% end %>
</table>
